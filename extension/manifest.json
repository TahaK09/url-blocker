{
  "manifest_version": 3,
  "name": "URL Blocker",
  "version": "0.0.1",
  "description": "Blocks the URL you paste!",
  "permissions": [
    "tabs",
    "storage",
    "idle",
    "activeTab",
    "scripting",
    "webNavigation"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icons.webp",
      "32": "icons/icons.webp",
      "48": "icons/icons.webp",
      "128": "icons/icons.webp"
    }
  },
  "icons": {
    "16": "icons/icons.webp",
    "32": "icons/icons.webp",
    "48": "icons/icons.webp",
    "128": "icons/icons.webp"
  }
}
